<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button
        android:id="@+id/bthelp"
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/opini" />

    <Button
        android:layout_width="78dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/maps"
        android:id="@+id/btn_maps" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="57dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bagong"
        android:id="@+id/gbbagong"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gbbagong"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="@string/title"
        android:textColor="@color/font"
        android:textSize="30sp"
        android:textStyle="bold"
        android:id="@+id/titlemus"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/button"
        android:id="@+id/button2" />

    <Button
        android:id="@+id/bthome"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/khome" />

    <Button
        android:id="@+id/btfasilitas"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="250dp"
        android:background="@drawable/fasilitas" />

    <Button
        android:id="@+id/btwahana"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginLeft="320dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/wahana" />

    <Button
        android:id="@+id/btdesc"
        android:layout_width="48dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginLeft="85dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/deskripsi" />

    <Button
        android:id="@+id/btanggota"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/button2"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/anggota" />

</RelativeLayout>


